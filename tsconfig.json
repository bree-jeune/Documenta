{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "es2017",
      "es2018",
      "dom"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/components/*": [
        "components/*"
      ]
    },
    "outDir": "./build",
    "jsx": "react"
  },
  "include": [
    "app",
    "src"
  ],
  "exclude": [
    "node_modules",
    "build",
    "**/__tests__/*",
    "**/__mocks__/*"
  ],
  "extends": "expo/tsconfig.base"
}
